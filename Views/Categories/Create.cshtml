@model Construction_Expert.Models.ConstructionCategory
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Construction_Expert.Models

@{
    ViewBag.Title = "New Category";
}

<h2 class="mb-4">New Category</h2>

<form asp-action="Create" method="post" class="w-50 mx-auto">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Code" class="form-label">Code</label>
        <input asp-for="Code" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AreaId" class="form-label">Area</label>
        <select asp-for="AreaId" asp-items="(SelectList)ViewBag.AreaList" class="form-select" required>
            <option value="">-- Select Area --</option>
        </select>
        <span asp-validation-for="AreaId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
    </div>

    <div class="form-check mb-2">
        <input asp-for="IsRoot" class="form-check-input" />
        <label asp-for="IsRoot" class="form-check-label"></label>
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsLeaf" class="form-check-input" />
        <label asp-for="IsLeaf" class="form-check-label"></label>
    </div>

    <div class="mb-4">
        <label for="parentId" class="form-label">Parent Category (optional)</label>
        <select id="parentId" name="parentId" class="form-select">
            <option value="">-- root --</option>
            @foreach (var c in (List<Construction_Expert.Models.ConstructionCategory>)ViewBag.Categories)
            {
                <option value="@c.Id">@c.Code - @c.Name</option>
            }
        </select>
    </div>

    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-success">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const root = document.getElementById('IsRoot');
            const leaf = document.getElementById('IsLeaf');

            function ensureOnlyOneChecked(changed, other) {
                if (changed.checked) {
                    other.checked = false;
                }
            }

            if (root.checked && leaf.checked) {
                leaf.checked = false;
            }

            root.addEventListener('change', function () {
                ensureOnlyOneChecked(root, leaf);
            });

            leaf.addEventListener('change', function () {
                ensureOnlyOneChecked(leaf, root);
            });
        })();
    </script>
}
