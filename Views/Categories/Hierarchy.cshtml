@using Construction_Expert.Models
@model List<(ConstructionCategory Cat, int Level)>

@{
    ViewBag.Title = "Kategori Hiyerarşisi";
}

<style>
    .grid-row {
        display: grid;
        grid-template-columns: repeat(10, 200px);
    }
</style>


<h3 class="mb-3">Kategori Ağaç Yapısı</h3>

<table class="table table-bordered align-middle">
    <thead>
        <tr>
            <th>Kategori</th>
            <th>Kod</th>
            <th>Alan (AreaId)</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var (cat, level) in Model)
        {
            <tr>
                <td>
                    @for (int i = 0; i < level; i++)
                    {
                        <span style="display:inline-block;width:25px"></span>
                    }

                    @if (cat.IsLeaf)
                    {
                        <i class="bi bi-dot"></i>
                    }
                    else
                    {
                        <i class="bi bi-folder"></i>
                    }
                    @cat.Name
                </td>
                <td>@cat.Code</td>
                <td>@cat.AreaId</td>
                <td>
                    <a asp-action="Create" asp-route-parentId="@cat.Id" class="btn btn-sm btn-primary">Alt Ekle</a>
                    <a asp-action="Edit" asp-route-id="@cat.Id" class="btn btn-sm btn-secondary">Düzenle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="mb-3 text-end">
    <a asp-action="Create" class="btn btn-outline-primary">
        <i class="bi bi-arrow-left-circle"></i> Kategoriye Dön
    </a>
</div>

